{% extends '@Calendar/layout.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col s12">
                <h3 class="center">Résultats de votre recherche.</h3>

                {# GIVE MESSAGE FOR RESEARCH #}

                {% if app.session.flashBag.has('error') %}
                    <div class="alert alert-success">
                        {% for msg in app.session.flashBag.get('error') %}
                            {{ msg }}
                        {% endfor %}
                    </div>
                {% endif %}
                {% if app.session.flashBag.has('success') %}
                    <div class="alert alert-success">
                        {% for msg in app.session.flashBag.get('success') %}
                            {{ msg }}
                        {% endfor %}
                    </div>
                {% endif %}

            </div>
        </div>
    </div>

    <div class="container">

        <div class="row">
            <div class="col s12">

                {# TABLE  #}
                <table class=" responsive-table bordered striped" id="table_id">
                    <thead>

                        <th class="">
                            <p class=" center">
                                Catégorie
                            </p>
                        </th>
                        <th class="">
                            <p class=" center">
                                Titre du film
                            </p>
                        </th>
                        <th class="">
                            <p class="center">
                                Synopsis
                            </p>
                        </th>

                    </thead>
                    <tbody>

                    {# RESULT LOOP #}

                    {% for resultat in resultats %}

                        <tr class="collection">
                            <td class="calendar-td-twig center">
                                {{ resultat.category}}
                            </td>
                            <td class="calendar-td-twig center">
                                <a href="{{ path('movies_show', { 'id': resultat.id }) }} " class="collection-item">
                                    {{ resultat.movies }}
                                </a>
                            </td>
                            <td class="calendar-td-twig ombre">
                                {{ resultat.resume|raw }}
                            </td>
                        </tr>

                    {% endfor %}

                    </tbody>
                </table>

            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/calendar/js/jquery.dataTables.min.js') }}"></script>
{% endblock %}
