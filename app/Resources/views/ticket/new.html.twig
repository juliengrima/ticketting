{% extends 'layout.html.twig' %}

{% block title %}
    Nouveau ticket
{% endblock %}

{% block body %}

    {{ form_start(form) }}
    <div class="">

        <div class="left">
            <div class="m-bottom">
                <div class="">
                    <p>Société :</p>
                    {{ form_widget(form.society) }}
                    {{ form_errors(form.society) }}
                </div>
            </div>
            <div class="m-bottom">
                <div class="">
                    <p>Nom et Prénom :</p>
                    {{ form_widget(form.user_name) }}
                    {{ form_errors(form.user_name) }}
                </div>
            </div>
            <div class="m-bottom">
                <div class="">
                    <p>Téléphone <span class="d-font">(01.02.03.04.05) </span>:</p>
                    {{ form_widget(form.phone) }}
                    {{ form_errors(form.phone) }}
                </div>
            </div>
        </div>

        <div class="right m-right">
            <div class="m-bottom">
                <div class="">
                    <p>Email :</p>
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>
            <div class="m-bottom">
                <div class="">
                    <p class="center-align">Commentaires :</p>
                    {{ form_widget(form.comment) }}
                    {{ form_errors(form.comment) }}
                </div>
            </div>
        </div>

    </div>
    <div class="m-top align-center">
        <input type="submit" value="Enregistrer" />
    </div>
    {{ form_end(form) }}

{% endblock %}
