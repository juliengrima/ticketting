{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ticket</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Society</th>
                <td>{{ ticket.society }}</td>
            </tr>
            <tr>
                <th>User_name</th>
                <td>{{ ticket.username }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ ticket.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ ticket.email }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ ticket.comment }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if ticket.date %}{{ ticket.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ticket_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ticket_edit', { 'id': ticket.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
