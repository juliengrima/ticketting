{% extends 'layout.html.twig' %}

{% block title %}
    Liste des tickets
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col s12">
                <h3 class="center">Résultats de votre recherche.</h3>

                {# GIVE MESSAGE FOR RESEARCH #}

                {% if app.session.flashBag.has('error') %}
                    <div class="alert alert-success">
                        {% for msg in app.session.flashBag.get('error') %}
                            {{ msg }}
                        {% endfor %}
                    </div>
                {% endif %}
                {% if app.session.flashBag.has('success') %}
                    <div class="alert alert-success">
                        {% for msg in app.session.flashBag.get('success') %}
                            {{ msg }}
                        {% endfor %}
                    </div>
                {% endif %}

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">

            {# TABLE  #}
            <table class=" responsive-table bordered striped" id="table_id">
                <thead>

                <th class="">
                    <p class=" center">
                        N° du ticket
                    </p>
                </th>

                <th class="">
                    <p class=" center">
                        Utilisateur
                    </p>
                </th>
                <th class="">
                    <p class="center">
                        Commentaire
                    </p>
                </th>
                    <th class="">
                        <p class="center">
                            Actions
                        </p>
                    </th>
                </thead>
                <tbody>

                {# RESULT LOOP #}

                {% for ticket in tickets %}

                    <tr class="">
                        <td class="calendar-td-twig center">
                            {{ ticket.id }} <br />
                            {% if ticket.date %}{{ ticket.date|date('d-m-Y') }}{% endif %} <br><br>
                            {{ ticket.ipAddress }}
                        </td>
                        <td class="calendar-td-twig center">

                            {% if userid is defined %}
                                {% for user in userid %}
                                    {{ user.username }} <br>
                                    {{ user.email }}
                                {% endfor %} <br />
                            {% endif %}
                            {{ ticket.society }} <br />
                            {{ ticket.phone }}
                        </td>
                        <td class="calendar-td-twig ombre">
                            {{ ticket.comment |raw }}
                        </td>
                        {% if ticket.treated == null %}
                            <td class="calendar-td-twig ombre">
                                <ul>
                                    <li>
                                        <a href="{{ path('ticket_edit', { 'id': ticket.id }) }}">Modifier</a>
                                    </li>
                                </ul>
                            </td>
                        {% else %}
                            <td class="collection">
                                <ul>
                                    <li>
                                        <p>Ticket traité</p>
                                    </li>
                                </ul>
                            </td>
                        {% endif %}
                    </tr>

                {% endfor %}

                </tbody>
            </table>

        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('assets/js/jquery.dataTables.min.js') }}"></script>
{% endblock %}