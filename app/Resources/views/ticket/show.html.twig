{% extends 'layout.html.twig' %}

{% block title %}
   Ticket {{ ticket.id }}
{% endblock %}


{% block body %}
    <h1>Ticket - {{ ticket.id }}</h1>
    <h3>Déposé le :{% if ticket.date %}{{ ticket.date|date('d-m-Y') }}{% endif %} </h3>

    <table>
        <tbody>
            <tr>
                <th>Poste</th>
                <td>{{ ticket.society }}</td>
            </tr>
            <tr>
                <th>Utilisateur</th>
                <td>{{ ticket.username }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ ticket.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ ticket.email }}</td>
            </tr>
            <tr>
                <th>Description de la panne</th>
                <td>{{ ticket.comment }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
